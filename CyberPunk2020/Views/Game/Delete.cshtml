@model Game

<h1>Are you sure you want to delete game?W</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" value="PlayerId" id="PlayerId" />
    <input type="hidden" value="NPCId" id="NPCId" />

    <div class="form-group">
        <label asp-for="name">Name</label>
        <input asp-for="name" class="form-control" placeholder="Enter Handle">
        <span asp-validation-for="name" class="text-danger"><</span>
    </div>

</form>
<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3"> />
    </form>
</div>