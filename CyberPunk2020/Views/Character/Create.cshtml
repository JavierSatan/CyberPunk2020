    <script>
      const maInput = document.getElementById('ma-input');
      const runInput = document.getElementById('run-input');
        const leapInput = document.getElementById('leap-input');

        maInput.addEventListener('input', () => {
            runInput.value = maInput.value * 3;
            leapInput.value = maInput.value * 0.75;
      });
    </script>

    <script>
        const bodyInput = document.getElementById('body-input');
        const saveInput = document.getElementById('save-input');
        const btmInput = document.getElementById('btm-input');
        const carryInput = document.getElementById('carry-input');
        const liftInput = document.getElementById('lift-input');

        bodyInput.addEventListener('input', () => {
            saveInput.value = bodyInput.value; 
            carryInput.value = bodyInput.value * 10;
            liftInput.value = bodyInput.value * 40;
            if (bodyInput.value >= 11) {
                btmInput.value = -5;
            }
            else if (bodyInput.value < 3) {
                btmInput.value = 0
            }
            else if (bodyInput.value == 10) {
                btmInput.value = -4;
            }
            else if (bodyInput.value == 9 || bodyInput.value == 8) {
                btmInput.value = -3;
            }
            else if (bodyInput.value == 7 || bodyInput.value == 6 || bodyInput.value == 5) {
                btmInput.value = -2;
            }
            else if (bodyInput.value == 3 || bodyInput.value == 4) {
                   btmInput.value = -1;
            }
            else {
               btmInput.value = 0;
            }
        });
    </script>

