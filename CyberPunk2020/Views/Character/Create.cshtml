    <script>
        const skillForms = document.querySelectorAll('#nomad-container input[type="number"]');
        const careerPointsRemaining = document.getElementById('career-points-remaining');
        const specialLevelInput = document.getElementById('special-level-input');

        // Set the initial value of SpecialAbilityLvl and Career points remaining to 0.
        let specialAbilityLevel = 0;
        let skillPoints = 40;
        let previousValues = {};

        specialLevelInput.value = specialAbilityLevel;
        careerPointsRemaining.innerText = skillPoints;

        // Listen for changes to the Special Ability Level input
        specialLevelInput.addEventListener('input', () => {
            const newSpecialAbilityLevel = Number(specialLevelInput.value);
            const pointsToAdd = newSpecialAbilityLevel - specialAbilityLevel;

            if (skillPoints - pointsToAdd < 0 || newSpecialAbilityLevel < 0) {
                specialLevelInput.value = specialAbilityLevel;
                return;
            }

            if (pointsToAdd > 0 && skillPoints <= 0) {
                specialLevelInput.value = specialAbilityLevel;
                return;
            }

            skillPoints -= pointsToAdd;
            specialAbilityLevel = newSpecialAbilityLevel;
            careerPointsRemaining.innerText = skillPoints;

            // Update the previousValues object so that we can add back any skill points that are removed later
            previousValues['SpecialAbilityLvl'] = specialAbilityLevel;
            previousValues['CareerPointsRemaining'] = skillPoints;
        });

        // Listen for changes to the skill inputs
        skillForms.forEach((form) => {
            const skillName = form.name;

            form.addEventListener('input', () => {
                const newValue = Number(form.value);
                const oldValue = previousValues[skillName] || 0;
                const pointsToAdd = newValue - oldValue;

                if (skillPoints - pointsToAdd < 0 || newValue < 0) {
                    form.value = oldValue;
                    return;
                }

                if (pointsToAdd > 0 && skillPoints <= 0) {
                    form.value = oldValue;
                    return;
                }

                skillPoints -= pointsToAdd;
                careerPointsRemaining.innerText = skillPoints;

                // Update the previousValues object with the new value of the input
                previousValues[skillName] = newValue;
            });
        });
    </script>


