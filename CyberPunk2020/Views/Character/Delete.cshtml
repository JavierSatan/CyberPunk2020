@using CyberPunk2020.Data.Enum
@model Character

<h1>Are you sure you want to delete this punk?W</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" value="StatsId" id="StatsId"/>
    <input type="hidden" value="SkillId" id="SkillId" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter Handle">
        <span asp-validation-for="Name" class="text-danger"><</span>
    </div>

    <div class="form-group">
        <label asp-for="age">age</label>
        <input asp-for="age" class="form-control" placeholder="Enter Age">
        <span asp-validation-for="age" class="text-danger"><</span>
    </div>

    <div class="form-group">
        <select asp-for="Role" asp-items="@Html.GetEnumSelectList<RoleCategory>()" class="form-control form-control-lg">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StatPoints">StatPoints</label>
        <input asp-for="StatPoints" class="form-control" placeholder="Enter Stat points">
        <span asp-validation-for="StatPoints" class="text-danger"><</span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Enter image link">
        <span asp-validation-for="Image" class="text-danger"><</span>
    </div>
</form>
<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3"> />
     </form>
</div>
