@{
}

<link href="css/StyleSheet.css" rel="stylesheet" />

<a class="album py-5 bg-light">
    <div class="container">
        <div>
            <a class="span10" style="font-size: 40px; color: black">PUNKS!!!</a>
            <a class="btn btn-primary my-2" style="background-color: red;  float: right" asp-area="" asp-controller="Character" asp-action="Create">Create Punk?</a>
        </div>
        <div class="row">
            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Image" width="225" height="225" alt="Card image cap">
                        <div class="card-body">
                            <div class="card-text text-center">
                                <p class="span8" style="font-size: 25px;">@item.Name</p>
                            </div>
                            <div style="display:flex; justify-content: space-between;">
                                  <p class="card-text span8" style="margin-right: auto;">Role: @item.Role</p>
                                  <p class="card-text span8" style="margin-left: auto;">Age: @item.age</p>
                            </div>
                            <div style="display:flex; justify-content: space-between;">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Character" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                                        <a type="button" asp-controller="Character" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a type="button" asp-controller="Character" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    </div>
                                </div>
                                <p class="card-text span8" style="margin-left: auto;">Stat Points: @item.StatPoints</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
    </a>